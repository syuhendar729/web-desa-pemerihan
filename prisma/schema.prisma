generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  // url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  name      String   @unique
  password  String
}

model Article {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  title     String
  slug      String   @unique
  content   String   @db.Text
  featuredImageUrl  String   @map("featured_image_url")
  additionalImages  String[] @map("additional_images")
}

model ShopItems {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  name      String   @unique
  price     Int
  slug      String   @unique
  contact   String
  description       String   @db.Text
  featuredImageUrl  String   @map("featured_image_url")
  additionalImages  String[] @map("additional_images")
}
